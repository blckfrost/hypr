{
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [" ", " ", " ", " ", " ", " ", " ", " ", ""],
        "on-scroll-up": "brightnessctl set 7%+",
        "on-scroll-down": "brightnessctl set 7%-",
        "tooltip-format": "{percent}% "
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "BAT: [ {icon} ] <span size='8pt'>{capacity}%</span>",
        "format-time": "{H}hr & {m}min",
        "format-charging": "BAT: [ {icon} ]{capacity}% <span size='8pt'>CHRG</span>",
        "format-plugged": "BAT: [ {icon} ] <span size='8pt'>PLUG</span>",
        "format-icons": [
            "<span color='#B7416E'>CRITICAL",
            "<span color='#B7416E'>!!!!!!!!</span>",
            "░ ░ ░ ░ ░ ░ ░",
            "█ ░ ░ ░ ░ ░ ░",
            "█ █ ░ ░ ░ ░ ░",
            "█ █ █ ░ ░ ░ ░",
            "█ █ █ █ ░ ░ ░",
            "█ █ █ █ █ ░ ░",
            "█ █ █ █ █ █ ░",
            "█ █ █ █ █ █ █"
        ],
        "interval": 1
    },

    "group/laptop": {
        "orientation": "horizontal",
        "modules": ["backlight", "battery"]
    }
}
